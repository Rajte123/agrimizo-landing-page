<%- include('../../partials/header', { title: project.title || 'Current Project' }) %>

<!-- Hero -->
<section id="home" class="hero-section">
  <div class="hero-text container text-center py-5">
    <h1 class="display-4 fw-bold "><%= project.title %></h1>
  </div>
</section>

<!-- Objective Section -->
<section class="py-5 bg-light text-dark">
  <div class="container">
    <h2 class="mb-5 fw-bold text-primary text-center">Our Objective</h2>

    <div class="row g-4">
      <% project.objectives.forEach(function(objective, index) { %>
        <div class="col-md-6 col-lg-4">
          <% if (project.link) { %>
            <a href="<%= project.link %>" target="_blank" class="card border-0 h-100 shadow-lg text-decoration-none text-dark bg-gradient" style="background: linear-gradient(135deg, #e3f2fd, #ffffff); transition: transform 0.3s;">
              <div class="card-body d-flex align-items-center">
                <div class="fw-bold fs-5">
                  Objective <%= index + 1 %>:
                  <span class="fw-semibold d-block mt-1 text-wrap text-break"><%= objective %></span>
                </div>
                <i class="bi bi-box-arrow-up-right fs-4 text-primary ms-auto"></i>
              </div>
            </a>
          <% } else { %>
            <div class="card border-0 h-100 shadow-lg bg-white" style="transition: transform 0.3s;">
              <div class="card-body d-flex align-items-center">
                <div class="fw-bold fs-5">
                  Objective <%= index + 1 %>:
                  <span class="fw-semibold d-block mt-1 text-wrap text-break"><%= objective %></span>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Proposed Architecture -->
<section class="py-5 bg-white">
  <div class="container">
    <h2 class="mb-4 fw-bold text-primary text-center">Proposed Architecture</h2>
    <div class="card border-0 shadow">
      <div class="card-body text-center">
        <img
          src="/uploads/<%= project.proposed_architecture %>"
          alt="Proposed Architecture"
          class="img-fluid rounded shadow-sm"
          style="max-height: 500px; object-fit: contain;"
        />
      </div>
    </div>
  </div>
</section>

<!-- Outcomes -->
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="text-center fw-bold text-primary mb-4">Outcomes</h2>
    <ul class="list-group list-group-flush shadow-sm rounded bg-white">
      <% project.outcomes.forEach((outcome, index) => { %>
        <li class="list-group-item fs-5">
          <span class="badge bg-primary me-2 fs-6"><%= index + 1 %></span> <%= outcome %>
        </li>
      <% }) %>
    </ul>
  </div>
</section>

<%- include('../../partials/footer') %>
